{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["../types/*","./lib/*"],
    },
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "experimentalDecorators":true,
    "module":"CommonJS",
    "esModuleInterop": true,
  },
  "include": ["src", "src/types"]
}
